<div id="quick-edit-div" style="display: none;">
  <h1>Edit</h1>

  <%= form_tag("/posts", :class => "simple_form", :method => :put, :id => "quick-edit-form") do %>
    <div class="input">
      <%= text_area_tag "post[tag_string]", "" %>
      <%= submit_tag "Submit", :class => "btn", :data => { :disable_with => "Submitting..." } %>
      <%= submit_tag "Cancel", :class => "btn" %>
    </div>
  <% end %>
</div>
